<?init class="org.zkoss.zk.ui.util.Composition" arg0="./templates/master-template.zul" ?>
<?page complete="true"?>

<zk xmlns="native" xmlns:zul="http://www.zkoss.org/2005/zul" xmlns:xh="xhtml" xmlns:sh="shadow">
    <xh:div self="@{define(pageContent)}" viewModel="@id('vm') @init('com.example.vm.ExploreVm')">

        <div class="container container-lg container-md mt-5">
            <div class="row">
                <sh:forEach items="@load(vm.imageDtos)">
                    <div class="col-lg-3 col-md-6 col-8 offset-2 offset-md-0 offset-lg-0 pb-3">
                        <xh:div class="card border border-primary rounded-lg"
                                style="height: 239px;
                                       cursor: pointer;"
                                onClick="@command('doRedirectToView', id=each.id)">
                            <div class="card-body pt-2 px-3">
                                <xh:h5 sclass="card-title m-0">
                                    ${each.name}
                                </xh:h5>
                                <div class="text-center h-100 d-flex justify-content-center align-items-center">
                                    <zul:image class="rounded-lg p-0"
                                               content="@load(each.thumbnail)
                                           @converter('com.example.converter.ImageToZkImageConverter')"/>
                                </div>
                            </div>
                        </xh:div>
                    </div>
                </sh:forEach>
            </div>
        </div>
    </xh:div>
</zk>